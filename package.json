{
  "name": "blockchain",
  "version": "1.0.0",
  "description": "Blockchain application",
  "license": "MIT",
  "scripts": {
    "build:client": "tsc -p src/client/tsconfig.client.json",
    "build:server": "tsc -p src/server/tsconfig.server.json",
    "build": "concurrently npm:build:*",
    "start:client": "tsc -p src/client/tsconfig.client.json --watch",
    "start:server": "nodemon --inspect src/server/main.js",
    "start": "concurrently npm:start:*",
    "format": "prettier --write .",
    "now-start": "NODE_ENV=production node build/server/main.js"
  },
  "dependencies": {
    "express": "4.17.1",
    "ws": "8.16.0"
  },
  "devDependencies": {
    "@types/express": "4.17.11",
    "@types/ws": "7.4.0",
    "concurrently": "^8.2.2",
    "nodemon": "2.0.7",
    "prettier": "3.2.5",
    "ts-node": "10.2.1",
    "typescript": "4.3.5"
  }
}
